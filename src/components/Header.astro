---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="header-nav">
  <nav class="nav-container">
    <div class="logo">
      <a href="/raminda-kariyawasam/" class="logo-text">{SITE_TITLE}</a>
    </div>

    <button
      class="mobile-nav-toggle"
      aria-controls="primary-navigation"
      aria-expanded="false"
    >
      <span class="sr-only">Menu</span>
      <div class="hamburger"></div>
    </button>

    <div class="nav-links" id="primary-navigation">
      <HeaderLink href="/raminda-kariyawasam/">Home</HeaderLink>
      <HeaderLink href="/raminda-kariyawasam/projects">Projects</HeaderLink>
      <HeaderLink href="/raminda-kariyawasam/blog">Blog</HeaderLink>
      <HeaderLink href="/raminda-kariyawasam/about">About</HeaderLink>
      <a href="#contact" class="cta-button">Contact Me</a>
    </div>
  </nav>
</header>

<style>
  /* Header Layout */
  .header-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: var(--glass-background);
    backdrop-filter: blur(10px);
    border-bottom: var(--glass-border);
    width: 100%;
    box-sizing: border-box;
  }

  .nav-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 1rem var(--container-padding);
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    width: 100%;
  }

  /* Logo Styles */
  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--accent);
    text-decoration: none;
    letter-spacing: 1px;
    text-transform: uppercase;
    position: relative;
  }

  .logo-text::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -5px;
    width: 100%;
    height: 2px;
    background: var(--accent);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
  }

  .logo-text:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  /* Navigation Links */
  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-links a {
    color: #fff;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    transition: color 0.3s ease;
    position: relative;
    padding: 0.5rem 0;
  }

  .nav-links a:not(.cta-button)::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 2px;
    background: var(--accent);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .nav-links a:hover:not(.cta-button) {
    color: var(--accent);
  }

  .nav-links a:hover:not(.cta-button)::after {
    transform: scaleX(1);
  }

  /* CTA Button */
  .cta-button {
    background: var(--accent);
    color: #000 !important;
    padding: 0.5rem 1.5rem !important;
    border-radius: 50px;
    border: 1px solid var(--accent);
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    background: transparent;
    color: var(--accent) !important;
  }

  /* Mobile Navigation */
  .mobile-nav-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .hamburger {
    width: 24px;
    height: 2px;
    background: var(--accent);
    position: relative;
    transition: all 0.3s ease;
  }

  .hamburger::before,
  .hamburger::after {
    content: "";
    position: absolute;
    width: 24px;
    height: 2px;
    background: var(--accent);
    transition: all 0.3s ease;
  }

  .hamburger::before {
    top: -8px;
  }
  .hamburger::after {
    bottom: -8px;
  }

  /* Responsive Styles */
  @media (max-width: 768px) {
    .mobile-nav-toggle {
      display: block;
    }

    .nav-container {
      background: rgba(0, 0, 0, 0.95);
      backdrop-filter: blur(10px);
    }

    .logo-text {
      font-size: 1.8rem;
    }

    .nav-links {
      display: none;
      position: fixed;
      top: var(--header-height);
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.95);
      backdrop-filter: blur(15px);
      -webkit-backdrop-filter: blur(15px);
      flex-direction: column;
      padding: 2rem var(--container-padding);
      gap: 1.5rem;
      border-top: 1px solid var(--accent);
      opacity: 0;
      visibility: hidden;
      transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.5);
      z-index: 999;
    }

    .nav-links[data-visible="true"] {
      display: flex;
      opacity: 1;
      visibility: visible;
    }

    .nav-links a {
      font-size: 1.4rem;
      padding: 1.2rem;
      width: 100%;
      text-align: center;
      background: rgba(0, 0, 0, 0.6);
      border: 1px solid rgba(0, 255, 255, 0.2);
      margin: 0.3rem 0;
      transition: all 0.3s ease;
    }

    .nav-links a:hover {
      background: rgba(0, 255, 255, 0.1);
      transform: translateY(-2px);
      box-shadow: 0 0 15px rgba(0, 255, 255, 0.2);
    }

    .cta-button {
      background: var(--accent) !important;
      border: none !important;
      margin-top: 1rem !important;
      font-weight: 600;
      letter-spacing: 1px;
      box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
    }

    /* Enhanced hamburger animation */
    .hamburger {
      width: 28px;
      height: 3px;
    }

    .hamburger::before,
    .hamburger::after {
      width: 28px;
      height: 3px;
    }

    .hamburger::before {
      top: -10px;
    }
    .hamburger::after {
      bottom: -10px;
    }

    .mobile-nav-toggle[aria-expanded="true"] .hamburger::before {
      transform: rotate(45deg) translate(7px, 7px);
    }

    .mobile-nav-toggle[aria-expanded="true"] .hamburger::after {
      transform: rotate(-45deg) translate(7px, -7px);
    }

    /* Add highlight effects */
    .nav-links a::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        45deg,
        transparent,
        rgba(0, 255, 255, 0.1),
        transparent
      );
      transform: translateX(-100%);
      transition: transform 0.5s;
    }

    .nav-links a:hover::before {
      transform: translateX(100%);
    }
  }

  @media (max-width: 480px) {
    nav {
      padding: 1rem;
    }

    .logo-text {
      font-size: 1.2rem;
    }

    .nav-container {
      background-color: rgba(0, 0, 0, 0.8);
      padding: 0.5rem 1rem;
    }

    .logo-text {
      font-size: 1.4rem;
    }

    .nav-links {
      padding: 1.5rem 1rem;
    }

    .nav-links a {
      font-size: 1.2rem;
      padding: 1rem;
    }
  }
</style>

<script>
  function setupMobileNav() {
    const navToggle = document.querySelector(".mobile-nav-toggle");
    const primaryNav = document.querySelector("#primary-navigation");
    const body = document.body;

    function toggleNav() {
      const isVisible = primaryNav?.hasAttribute("data-visible");
      if (primaryNav && navToggle) {
        if (!isVisible) {
          primaryNav.setAttribute("data-visible", "true");
          navToggle.setAttribute("aria-expanded", "true");
          body.style.overflow = "hidden";
        } else {
          primaryNav.removeAttribute("data-visible");
          navToggle.setAttribute("aria-expanded", "false");
          body.style.overflow = "";
        }
      }
    }

    navToggle?.addEventListener("click", toggleNav);
  }

  // Run setup on initial load
  setupMobileNav();

  // Re-run setup when navigating between pages
  document.addEventListener("astro:page-load", setupMobileNav);

  // Add touch feedback
  document.querySelectorAll(".nav-links a").forEach((link) => {
    link.addEventListener("touchstart", () => {
      link.style.transform = "scale(0.98)";
    });

    link.addEventListener("touchend", () => {
      link.style.transform = "scale(1)";
    });
  });
</script>
