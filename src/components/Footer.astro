<style>
  /* Footer Layout */
  .cyber-footer {
    --footer-bg: rgba(8, 9, 12, 0.95);
    position: relative;
    z-index: 10;
    width: 100%;
    margin-top: auto;
    background: var(--footer-bg);
    border-top: 1px solid var(--accent);
    padding: 4rem var(--container-padding);
    box-sizing: border-box;
  }

  /* Grid Layout */
  .footer-grid {
    max-width: var(--max-width);
    width: 100%;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    box-sizing: border-box;
  }

  /* Section Styling */
  .footer-section {
    position: relative;
  }

  .footer-title {
    color: var(--accent);
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  /* Social Links */
  .social-links {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .social-icon {
    color: var(--accent);
    transition: all 0.3s ease;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .icon-label {
    font-size: 0.8rem;
    opacity: 0;
    transform: translateY(-10px);
    transition: all 0.3s ease;
  }

  .social-icon:hover {
    transform: translateY(-5px);
    color: #fff;
  }

  .social-icon:hover .icon-label {
    opacity: 1;
    transform: translateY(0);
  }

  .social-icon::before {
    content: "";
    position: absolute;
    top: -5px;
    left: -5px;
    right: -5px;
    bottom: -5px;
    border: 1px solid var(--accent);
    border-radius: 50%;
    opacity: 0;
    transform: scale(1.2);
    transition: all 0.3s ease;
  }

  .social-icon:hover::before {
    opacity: 1;
    transform: scale(1);
  }

  /* Navigation Links */
  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-links a {
    color: #fff;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    width: fit-content;
  }

  .footer-links a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 100%;
    height: 1px;
    background: var(--accent);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
  }

  .footer-links a:hover {
    color: var(--accent);
  }

  .footer-links a:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  /* Copyright Section */
  .copyright {
    text-align: center;
    color: #fff;
  }

  .tagline {
    color: var(--accent);
    font-size: 0.9rem;
    margin-top: 0.5rem;
  }

  .cyber-line {
    width: 50px;
    height: 2px;
    background: var(--accent);
    margin: 1rem auto;
    position: relative;
    overflow: hidden;
  }

  .cyber-line::before {
    content: "";
    position: absolute;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, #fff, transparent);
    animation: cyberscan 2s linear infinite;
  }

  /* Animations */
  @keyframes cyberscan {
    from {
      left: -100%;
    }
    to {
      left: 100%;
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 2rem;
    }

    .social-links {
      justify-content: center;
    }

    .footer-links {
      align-items: center;
    }

    .cyber-footer {
      padding: 2rem var(--container-padding);
    }

    .footer-section {
      padding: 0 1rem;
      box-sizing: border-box;
    }
  }
</style>
