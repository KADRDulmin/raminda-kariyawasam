---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} | About`} description={SITE_DESCRIPTION} />
    <style>
      main {
        padding-top: var(--header-height);
        min-height: 100vh;
        background: var(--dark-gradient);
      }

      .about-container {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 2rem;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 3rem;
        align-items: start;
      }

      .left-column, .right-column {
        display: flex;
        flex-direction: column;
        gap: 3rem;
      }

      .profile-section {
        position: relative;
        perspective: 1000px;
        transform-style: preserve-3d;
        margin-bottom: 2rem;
      }

      .profile-wrapper {
        position: relative;
        width: 100%;
        cursor: pointer;
        transition: transform 0.5s ease;
      }

      .profile-image {
        width: 100%;
        height: 45rem;
        aspect-ratio: 1;
        border-radius: 20px;
        object-fit: contain;
        border: 2px solid var(--accent);
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.2);
        transition: all 0.5s ease;
        filter: brightness(1) contrast(1.1);
      }

      .profile-glow {
        position: absolute;
        inset: -3px;
        border-radius: 22px;
        background: linear-gradient(
          45deg,
          var(--accent),
          transparent,
          var(--accent)
        );
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: -1;
        animation: rotateGlow 3s linear infinite;
      }

      .profile-wrapper:hover .profile-glow {
        opacity: 0.5;
      }

      .profile-frame {
        position: absolute;
        inset: -10px;
        border: 1px solid var(--accent);
        border-radius: 25px;
        opacity: 0.5;
        pointer-events: none;
      }

      .profile-frame::before,
      .profile-frame::after {
        content: "";
        position: absolute;
        width: 20px;
        height: 20px;
        border: 2px solid var(--accent);
        animation: cornerPulse 2s infinite;
      }

      .profile-frame::before {
        top: -5px;
        left: -5px;
        border-right: none;
        border-bottom: none;
      }

      .profile-frame::after {
        bottom: -5px;
        right: -5px;
        border-left: none;
        border-top: none;
      }

      .profile-scanner {
        position: absolute;
        width: 100%;
        height: 2px;
        background: var(--accent);
        opacity: 0;
        filter: blur(1px);
        animation: scan 3s ease-in-out infinite;
      }

      @keyframes scan {
        0% {
          top: 0;
          opacity: 0;
        }
        5% {
          opacity: 0.5;
        }
        95% {
          opacity: 0.5;
        }
        100% {
          top: 100%;
          opacity: 0;
        }
      }

      @keyframes cornerPulse {
        0%,
        100% {
          transform: scale(1);
          opacity: 1;
        }
        50% {
          transform: scale(1.2);
          opacity: 0.5;
        }
      }

      @keyframes rotateGlow {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }

      @media (max-width: 768px) {
        .profile-image {
          height: 35rem;
        }
      }

      @media (max-width: 480px) {
        .profile-image {
          height: 22rem;
        }
      }

      .info-section {
        color: #fff;
      }

      .section-title {
        font-size: 2.5rem;
        color: var(--accent);
        margin-bottom: 1.5rem;
        position: relative;
        text-transform: uppercase;
        letter-spacing: 2px;
      }

      .section-title::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -10px;
        width: 60px;
        height: 3px;
        background: var(--accent);
        animation: expandLine 3s ease-out infinite;
      }

      .bio {
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
        color: rgba(255, 255, 255, 0.9);
      }

      .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        gap: 1rem;
        margin: 2rem 0;
      }

      .skill-tag {
        background: rgba(0, 255, 255, 0.1);
        border: 1px solid var(--accent);
        padding: 0.75rem 1rem;
        border-radius: 8px;
        text-align: center;
        transition: all 0.3s ease;
      }

      .skill-tag:hover {
        transform: translateY(-5px);
        background: rgba(0, 255, 255, 0.2);
        box-shadow: 0 5px 15px rgba(0, 255, 255, 0.3);
      }

      .bio-section1 {
        display: none;
      }

      @keyframes float {
        0%,
        100% {
